# Maintainer: h3fang

pkgname=yacd
pkgver=0.2.4
pkgrel=1
pkgdesc="Yet Another Clash Dashboard"
arch=('any')
url="https://github.com/haishanh/yacd"
source=("${pkgname}.zip::https://github.com/haishanh/yacd/archive/gh-pages.zip")
sha256sums=('c83a214ba07dfecdc45788120973b744bc4fa354a8c5274f7ffabdcb358447cc')
groups=('modified')

package() {
  install -dm755 "${pkgdir}/usr/share"
  cp -rT "${srcdir}/yacd-gh-pages" "${pkgdir}/usr/share/${pkgname}"
}
