# Maintainer: h3fang hf.enigma#gmail

pkgname=cdns
pkgver=0.5.0
pkgrel=1
pkgdesc="Local DNS server to relay queries to public DNS-over-Https servers"
url="https://github.com/h3fang/cdns"
license=('MIT')
groups=(modified)
makedepends=(cargo)
arch=('x86_64')
source=("${url}/archive/refs/tags/v${pkgver}.tar.gz")

sha256sums=('c0f545bf83154249771ce165df29c8228845a42d5fa554afeaa803d8bd57bd5d')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    cargo build --release
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    install -Dm755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
