# Maintainer: h3fang hf.enigma#gmail

pkgname=pacfilter
pkgver=0.6.0
pkgrel=1
pkgdesc="Filter pacman log file"
url="https://github.com/h3fang/pacfilter"
license=('MIT')
groups=(modified)
makedepends=(cargo)
arch=('x86_64')
source=("https://github.com/h3fang/pacfilter/archive/refs/tags/v${pkgver}.tar.gz")
b2sums=('ad08f07b15d62828b7debea65347f050ee2ed3dc403d6749d8780e8248aa4914439857c2286a5db6be9b64762264a3cb22024bdf8f86478e235fa5bc1e4d477e')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    cargo build --release --locked
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    install -Dm755 "target/release/pf" "$pkgdir/usr/bin/pf"
}
