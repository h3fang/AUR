# Maintainer: h3fang <hf.enigma@gmail.com>
pkgname=tun2socks
pkgver=2.3.2
pkgrel=1
pkgdesc="tun2socks - powered by gVisor TCP/IP stack."
arch=(x86_64)
url="https://github.com/xjasonlyu/tun2socks"
license=(GPL3)
makedepends=(go)
groups=(modified)
source=(
    "https://github.com/xjasonlyu/tun2socks/archive/refs/tags/v${pkgver}.tar.gz"
)
sha512sums=('12883eb7288f834e0accc7b86207689da785de896bd2866b5eb2c63fd3b1b27f1435dff1010da7c327a859175be122389bcd2a85f1b335b9f89147baef994efe')

build() {
    cd "$srcdir/${pkgname}-${pkgver}"
    export GOPATH="${srcdir}/go"
    export LDFLAGS=
    export GOFLAGS="-buildmode=pie -trimpath -mod=readonly -modcacherw"
    make linux-amd64
}

package() {
    cd "$srcdir/${pkgname}-${pkgver}"
    install -Dm755 "build/tun2socks-linux-amd64" "$pkgdir/usr/bin/tun2socks"
}
