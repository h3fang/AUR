# Maintainer: hefang

pkgname=battery-notifications
pkgver=0.3
pkgrel=1
pkgdesc="Battery notifications"
url="https://bbs.archlinux.org/viewtopic.php?pid=1431917"
license=('MIT')
groups=(modified)
depends=('fmt' 'libnotify')
arch=('x86_64')
source=('Makefile'
        'battery-notifications.cpp'
        'battery-notifications.service')

sha256sums=('b93ab7ddb8552a7944ff53d22aa3def60451e8588a7e047efa61066b5b6e7a3c'
            '2ecd75dd9e98960c3e4985f90f15d0e81e980f701d2c7afc2c40e34636d56bcc'
            '5e5ee719826ddd9dccd2ea516ab80617530062d37ea64cbca9e1d351dd26d54a')

build() {
    cd "$srcdir"
    make
}

package() {
    install -Dm644 "$srcdir/$pkgname.service" "$pkgdir/usr/lib/systemd/user/$pkgname.service"
    install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
